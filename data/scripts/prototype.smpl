func edit_task(task_name, new_duration, new_priority)
  # Get the task from the system using its name
  task_to_edit: get_task_by_name(task_name)

  # Update the task properties
  task_to_edit.set_duration(new_duration)
  task_to_edit.set_priority(new_priority)

  # Save the changes to the system
  save_changes()

