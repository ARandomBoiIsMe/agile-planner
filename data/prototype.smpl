# Custom function
func view_tasks:
  # Get all tasks, labels, and cards from the system
  tasks: get_all_tasks
  labels: get_all_labels
  cards: get_all_cards

  # Display tasks, labels, and cards
  print("All Tasks:")
  foreach task in tasks:
    print(task.name, "-", task.duration, "hours, priority:", task.priority)
    print("  Labels:")
    foreach label in task.labels:
      print("    ", label.name)
    print("  Cards:")
    foreach card in task.cards:
      println("    ", card.name

# Sample function call
view_tasks()




